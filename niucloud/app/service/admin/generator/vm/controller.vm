   /**
    * 获取{NOTES}列表
    * @return \think\Response
    */
    public function lists(){
        $data = $this->request->params([
{SEARCH_PARAMS}
        ]);
        return success((new {UCASE_NAME}Service())->getPage($data));
    }

    /**
     * {NOTES}详情
     * @param int $id
     * @return \think\Response
     */
